@model Employee

<h1 class="text-center text-success text-decoration-underline">
    Edit Current Employee
    </h1>

    <partial name="_hrSupport"/>

    <div class="row">
    <form method="post" asp-controller="Employees" asp-action="EditCurrent" enctype="multipart/form-data" class="col-4">
       <div asp-validation-summary="All" class="alert-danger text-danger"></div>

       <input type="hidden" asp-for="ID" />
       <input type="hidden" asp-for="CreatedAt" />
       <input type="hidden" asp-for="ImageUrl" />

        <div>
            <label>Full Name</label>
            <input type="text" asp-for="Name" class="form-control" />
            
        </div>
        <div>
            <label>Position</label>
            <input type="text" asp-for="Position" class="form-control" />
            
        </div>
        <div>
            <label>Salary</label>
            <input type="number" asp-for="Salary" class="form-control"/>
            
        </div>


         <div>
            <label>Bonus</label>
            <input type="number" asp-for="Bonus" class="form-control"/>

        </div>

        <div>
            <label>Phone No</label>
            <input type="number" asp-for="PhoneNo" class="form-control"/>

        </div>

        <div>
            <label>Email</label>
            <input type="email" asp-for="Email" class="form-control"/>

        </div>

        <div>
            <label>Confirm Email</label>
            <input type="email" asp-for="ConfirmEmail" class="form-control"/>

        </div>
        <div>
            <label>Password</label>
            <input type="password" asp-for="Password" class="form-control"/>

        </div>

        <div>
            <label>Confirm Password</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control"/>

        </div>

        <div>
            <label>Hiring Date & Time</label>
            <input asp-for="HiringDateTime" class="form-control"/>

        </div>

        <div>
            <label>Birth Date</label>
            <input asp-for="BirthDate" class="form-control"/>

        </div>

        <div>
            <label>Attendance Time</label>
            <input asp-for="AttendanceTime" class="form-control"/>

        </div>

        <div>
            <label>Leaving Time</label>
            <input asp-for="LeavingTime" class="form-control"/>

        </div>

        <div>
            <label>Department</label>
           <select class="form-control" asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.AllDepartments , "Id" , "DepName"))">
               <option disabled selected>Select...</option>

           </select>
        </div>


       <div>
            <label asp-for="ImageUrl"></label>
             <input type="file" name="imageFile" id="imageFile" accept=".png,.jpg" class="form-control" onchange="ChangeName()"/>
        </div>

        <div>
            <button type="submit" class="btn btn-success mt-3 mb-3">Edit Employee</button>
        </div>
    </form>
     <img asp-append-version src="@Model.ImageUrl" id="empImage" class="col-2" style="object-fit:contain"/>
    </div>




<a asp-controller="Employees" asp-action="GetIndexView" class="btn btn-secondary">Back To List</a>


@section Scripts{
    <script>
            function ChangeName(){
                        document.getElementById("empImage").src = window.URL.createObjectURL
                        (document.getElementById("imageFile").files[0]);
        }

    </script>
}