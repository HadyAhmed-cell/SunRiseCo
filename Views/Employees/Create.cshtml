@model Employee

<h1  class="text-center text-success text-decoration-underline">
    Create New Employee
    </h1>

    <partial name="_hrSupport"/>

    <div class="row">
    <form method="post" asp-controller="Employees" asp-action="AddEmployee" enctype="multipart/form-data" class="col-4">
       <div asp-validation-summary="All" class="alert-danger text-danger"></div>
        
        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            
        </div>
        <div>
            <label asp-for="Position"></label>
            <input type="text" asp-for="Position" class="form-control"/>
            
        </div>
        <div>
            <label asp-for="Salary"></label>
            <input type="number" asp-for="Salary" class="form-control"/>
            
        </div>
        <div>
            <label asp-for="Bonus"></label>
            <input type="number" asp-for="Bonus" class="form-control"/>

        </div>

        <div>
            <label asp-for="PhoneNo"></label>
            <input type="number" asp-for="PhoneNo" class="form-control"/>

        </div>

        <div>
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" class="form-control"/>

        </div>

        <div>
            <label asp-for="ConfirmEmail"></label>
            <input type="email" asp-for="ConfirmEmail" class="form-control"/>

        </div>
        <div>
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control"/>

        </div>

        <div>
            <label asp-for="ConfirmPassword"></label>
            <input type="password" asp-for="ConfirmPassword" class="form-control"/>

        </div>

        <div>
            <label asp-for="HiringDateTime"></label>
            <input asp-for="HiringDateTime" class="form-control"/>

        </div>

        <div>
            <label asp-for="BirthDate"></label>
            <input asp-for="BirthDate" class="form-control"/>

        </div>

        <div>
            <label asp-for="AttendanceTime"></label>
            <input asp-for="AttendanceTime" class="form-control"/>

        </div>

        <div>
            <label asp-for="LeavingTime"></label>
            <input asp-for="LeavingTime" class="form-control"/>

        </div>

        <div>
            <label asp-for="DepartmentId"></label>
           <select class="form-control" asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.AllDepartments , "Id" , "DepName"))">
               <option disabled selected>Select...</option>
               
           </select>
        </div>

        <div>
            <label asp-for="ImageUrl"></label>
             <input type="file" name="imageFile" id="imageFile" accept=".png,.jpg" class="form-control" onchange="AddImage()"/>
        </div>


        <div>
            <button type="submit" class="btn btn-success mt-3 mb-3" >Add Employee</button>
        </div>
    </form>

    <img src="" id="empImage" class="col-2" style="object-fit:contain"/>
    </div>


<a asp-controller="Employees" asp-action="GetIndexView" class="btn btn-secondary">Back To List</a>

@section Scripts{
    <script>
        function AddImage(){
                        document.getElementById("empImage").src = window.URL.createObjectURL
                        (document.getElementById("imageFile").files[0]);


        }

    </script>

}

