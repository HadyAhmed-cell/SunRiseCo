@model Department

<h1 class="alert alert-danger text-center display-3" style="color:darkred">
    Are U Sure U want to Delete ?
</h1>



<dl class="row">
    <dt class="col-2">Id</dt>
    <dd class="col-10">@Model.Id</dd>
    <dt class="col-2">Department Name</dt>
    <dd class="col-10">@Model.DepName</dd>
    <dt class="col-2">Description</dt>
    <dd class="col-10">@Model.Description</dd>
   
</dl>

<form method="post" asp-controller="Departments" asp-action="DeleteCurrent">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger mb-3">Delete Department</button>
</form>

<a asp-controller="Departments" asp-action="GetIndexView" class="btn btn-secondary">Back To List</a>
