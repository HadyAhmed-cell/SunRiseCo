@model IEnumerable<Department>


<h1 style="background-color:cyan; color:maroon">
    Department Index
</h1>

<a asp-controller="Departments" asp-action="GetCreateView" class="btn btn-success mb-3 mt-3">Create New Department</a>

@if (Model.Count()>0)
{
        <table class="table table-striped table-bordered table-hover table-success">
        <thead>
            <tr><th>Id</th><th>Department Name</th><th>Description</th><th>Department Details</th></tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                                 <tr><td>@item.Id</td><td>@item.DepName</td><td>@item.Description</td><td><a asp-controller="Departments" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                                                                       <a asp-controller="Departments" asp-action="EditDepartment" asp-route-id="@item.Id" class="btn btn-primary ms-1 me-2">Edit</a><a asp-controller="Departments" asp-action="DeleteDept" asp-route-id="@item.Id" class="btn btn-danger pl">Delete</a></td>
                               
                                 </tr>

                }
            }

            </tbody>
        <tfoot>
            <tr></tr>
        </tfoot>
    </table>
}

else{
    <h1 class="alert alert-danger text-center text-danger">Mafesh Data Ya Sa7by !!</h1>
}



<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Home</a>





