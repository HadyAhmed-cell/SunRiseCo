@model Department

<h1 style="background-color:cyan; color:maroon">
    Details
</h1>



<dl>
    <dt>Id</dt><dd>@Model.Id</dd>
    <dt>Department Name</dt><dd>@Model.DepName</dd>
    <dt>Description</dt><dd>@Model.Description</dd>
    
</dl>
<h3>Employees :</h3>
<ul class="list-group">
    @foreach (var employee in Model.Employees)
    {
        <li class="list-group-item list-group-item-action">@employee.Name</li>
    }
</ul>

<a asp-controller="Departments" asp-action="GetIndexView" class="btn btn-secondary">Back To List</a>
